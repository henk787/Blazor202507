@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" disabled="@isBusy" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    bool isBusy = false;

    private async Task IncrementCount()
    {
        isBusy = true;
        StateHasChanged();
        await Task.Yield();

        Thread.Sleep(1500);   // sync wait
        currentCount++;

        isBusy = false;
    }
}
