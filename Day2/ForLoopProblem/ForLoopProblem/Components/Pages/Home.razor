@page "/"
@rendermode InteractiveServer


<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>
<div>
    @for (int i = 0; i < items.Count; i++)
    {
       int iCopy = i;
        <p>
            @i : @items[i] <button @onclick="() => DeleteItem(iCopy)">X</button>

           @*  <InputNumber @bind-Value="items[i]" /> *@
        </p>
    }
</div>
@code
{
    List<int> items = [2, 4, 6, 8];

    void DeleteItem(int x)
    {
        items.RemoveAt(x);
    }
}
